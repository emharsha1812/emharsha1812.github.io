<div class="col mb-4">
  <a href="{% if paper.redirect %}{{ paper.redirect }}{% else %}{{ paper.url | relative_url }}{% endif %}">
    <div class="card h-100 hoverable">
      <div class="row no-gutters">
        {% if paper.img %}
          <div class="col-md-4">
            {% include figure.liquid 
               loading="eager" 
               path=paper.img 
               sizes="(min-width: 768px) 200px, 50vw" 
               alt="paper implementation thumbnail" 
               class="card-img h-100" 
               style="object-fit: cover;" %}
          </div>
          <div class="col-md-8">
        {% else %}
          <div class="col-md-12">
        {% endif %}
            <div class="card-body d-flex flex-column justify-content-between h-100">
              <div>
                <h3 class="card-title">{{ paper.title }}</h3>
                <p class="card-text">{{ paper.description }}</p>
              </div>
              <div class="d-flex align-items-center justify-content-between mt-auto pt-2">
                {% if paper.arxiv %}
                  <a href="{{ paper.arxiv }}" class="text-decoration-none" data-toggle="tooltip" title="arXiv Paper">
                    <i class="ai ai-arxiv fa-lg text-muted"></i>
                  </a>
                {% else %}
                  <div></div>
                {% endif %}
                {% if paper.github %}
                  <a href="{{ paper.github }}" class="text-decoration-none" data-toggle="tooltip" title="Implementation Repository">
                    <i class="fa-brands fa-github fa-lg gh-icon"></i>
                  </a>
                {% else %}
                  <div></div>
                {% endif %}
              </div>
            </div>
          </div>
      </div>
    </div>
  </a>
</div>
